{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "target": "es6",
    "module": "ES6",
    "noImplicitAny": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}